	<record id="action_partner_recruitment" model="ir.actions.act_window">
        <field name="name">Partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('type', '=', 'recruitment')]</field>
        <field name="help"></field>
    </record>
	
	<menuitem name="File Template"
		id="menu_file_template"
		groups="base.group_user"
		sequence="30"
		action="action_file_template"
		parent="hr_recruitment.menu_hr_recruitment_configuration"/>

	<menuitem name="Job Location"
		id="menu_partner_recruitement"
		groups="base.group_user"
		sequence="40"
		action="action_partner_recruitment"
		parent="hr_recruitment.menu_hr_recruitment_configuration"/>
</odoo>